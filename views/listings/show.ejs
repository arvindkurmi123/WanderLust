<% layout("/layouts/boilerplate") %>

  <body>


    <div class="row mt-3 offset-3">
      <div class="col-8 show-page">
        <h3>Listing Details</h3>
      </div>
      <div class="col-md-10 col-lg-8 col-sm-12 show-page">
        <div class="card">
          <img class="card-img-top show-img" src="<%= listing.image %>" alt="cardimg">
          <div class="card-body">
            <p class="card-text">
              <b>
                <%= listing.title %>
              </b><br>
              <%= listing.description %> <br>
              &#8377; <%= listing.price.toLocaleString("en-IN") %> /per-night <br>
              <%= listing.location %> <br>
              <%= listing.country %>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="btns">
      <a href="/listings/<%= listing._id %>/edit" class="col-1 btn edit-btn offset-3">Edit</a>
      <form method="POST" action="/listings/<%=listing._id%>?_method=DELETE" >
        <button class="btn btn-dark offset-5">Delete</button>
      </form>
    </div>
  </body>